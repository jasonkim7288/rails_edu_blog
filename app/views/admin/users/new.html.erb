<div class="main">
    <section>
        <h1><%= @page_title %></h1>
        <%= form_with model: [:admin, @user] do |f| %>
            <% if @user.errors.any? %>
                <% @user.errors.full_messages.each do |msg| %>
                    <h2><%= msg %></h2>
                <% end %>
            <% end %>

            <div>
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>

            <div>
                <%= f.label :email %>
                <%= f.text_field :email %>
            </div>

            <div>
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>

            <div>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation %>
            </div>

            <div>
                <%= f.submit %>
            </div>

            <div>
                <%= link_to 'Cancel', admin_users_path %>
            </div>
        <% end %>
    </section>
</div>